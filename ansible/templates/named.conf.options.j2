options {
    directory "/var/cache/bind";

    forwarders {
        8.8.8.8;
        8.8.4.4;
    };
    
    recursion yes;
    allow-recursion { 192.168.0.0/16; 127.0.0.1; };
    listen-on { 127.0.0.1; 192.168.30.10; };
    allow-transfer { none; };

    dnssec-validation auto;
    auth-nxdomain no;
    listen-on-v6 { any; };
};
